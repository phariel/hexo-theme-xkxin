.footer {
  font-size: 14px;
  color: $colorDarkGray;
}

.footer-inner {
  text-align: center;
}

.copyright, .author {
  text-transform: uppercase;
}

.with-love {
  display: inline-block;
  margin: 0 5px;
  color: $colorFlameRed;
}

.powered-by, .theme-info {
  display: inline-block;
}

.powered-by {
  margin-right: 10px;

  &::after {
    content: "|";
    padding-left: 10px;
  }
}
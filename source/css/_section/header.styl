
.header {
  background: $headerBackgroundColor;
  border-bottom: solid $headerBorderBottomWidth $headerBorderBottomColor;
}

.header-inner {
  position: relative;
}

.site-meta {
  text-align: $siteMetaTextAlignment;

  .brand, .feed {
    position: relative;
    display: inline-block;
    vertical-align: bottom;
    border-bottom: none;
  }
}

.has-feed {
  .brand, .feed {
    right: -16px;
  }
}

.brand {
  padding: 2px 15px;
  color: $brandTextColor;
  background: $brandBackground
  border-bottom: none;
  font-family: $fontLogo;
  position: relative;
  padding-left: 150px;

  the-shape(15px, white, 2px);
}

.site-title {
  display: inline-block;
  vertical-align: top;
  line-height: 35px;
  text-transform: uppercase;
  font-size: 20px;
  font-weight: bold;
}

.site-face {
  display: inline-block;
  position: absolute;
  width: 90px;
  height: 90px;
  background: #fff;
  top: -30px;
  left: 20px;
  padding: 5px;
  border-radius: 50px;

  img {
    width: 90px;
    height: 90px;
    border-radius: 45px;
  }
}

.feed {
  width: 16px;
  height: 16px;
  opacity: 0.2;
  background: url("data:image/svg+xml;base64,") no-repeat;
  background-size: 16px 16px;

  &:hover {
    opacity: 0.5;
  }
}

.menu {
  margin-top: 40px;
  padding-left: 0;
  text-align: center;
}

.menu .menu-item {
  display: inline-block;
  margin-left: 30px;

  &:first-child {
    margin-left: 0;
  }

  a {
    display: block;
    color: $colorFlameRed;
    font-size: 14px;
    font-weight: bold;
    text-decoration: none;
    text-transform: capitalize;
    border-bottom: 1px solid $colorDarkGray;

    &:hover {
      border-bottom-color: $colorDeepBlack;
    }
    &::before {
      content: "";
      display: block;
      margin: 0 auto;
      width: 24px;
      height: 24px;
      vertical-align: middle;

    }
  }
}

